@using System.Data;
@model DebtorSearch.Models.ActivityReportsStructureModel
@{
    ViewBag.Title = "Index";
    
}
@using (Html.BeginForm("Index", "Sms", FormMethod.Post, new { @class = "form-horizontal", role = "form", autocomplete = "off" }))
{
    <div class="form-group">
        <div class="col-md-4">
            Last Refresh Time:<b>@ViewBag.LastUpdateTime </b>
            <br />
            Data Delay: <b>5 Mins</b>
            <br />
            Client:
            @foreach (DataRow row in Model.ClientName.Rows)
            {
                <b> @row[0].ToString().ToUpperInvariant()</b>
            }

        </div>
        <div class="col-md-8">
         
             

        </div>
    </div>

