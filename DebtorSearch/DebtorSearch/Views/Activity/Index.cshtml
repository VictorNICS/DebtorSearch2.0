        </div>*@

    @*<br />*@

    <div class="row">
        <div class="col-sm-10">
            <table id="ActivityPTP" class="table table-hover table-condensed table-striped">
                <thead class="levelOne">
                    <tr>
                        @foreach (DataColumn col in Model.TotalPTP.Columns)
                        {
                            <th>@col.ColumnName</th>
                        }

                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.TotalPTP.Rows)
                    {
                        <tr class="table-hover">

                            @foreach (DataColumn col in Model.TotalPTP.Columns)
                            {
                                <td>@row[col.ColumnName]</td>
                            }

                        </tr>

                    }
                </tbody>


            </table>
        </div>
      
    </div>





}

