@model  IEnumerable<DebtorSearch.Models.ConnStringViewModel>
@{
    ViewBag.Title = "Delete";
}
<ng-form id="mainForm" name="mainForm" class="form-horizontal">

    <div class="row">
        <div class="col-md-8">
            @if (Model.Any() && Model != null)
            {

                <table class="table table-hover table-condensed table-striped" id="ConString">
                    <thead class="levelOne">
                        <tr>
                            <th>Name</th>
                            <th>ServerName</th>
                            <th>UserId</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {

                            <tr class="table-hover">
                                <td>@item.Name</td>
                                <td>@item.ServerName</td>
                                <td>@item.UserId</td>



                                <td>

                                    @Html.ActionLink("Delete", "Delete", "Activity",
                      new { id = item.Id },
                      new { @class = "btn btn-danger" }

                      )

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>
            }
        </div>
        <div class="col-md-4">

        </div>
    </div>


</ng-form>


