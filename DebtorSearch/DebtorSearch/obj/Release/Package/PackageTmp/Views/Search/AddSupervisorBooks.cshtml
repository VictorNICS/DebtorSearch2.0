@model DebtorSearch.Models.BooksViewmodel
@{
    ViewBag.Title = "Add Books";
}

@using (Html.BeginForm("AddSupervisorBooks", "Search", FormMethod.Post, new { @class = "form-horizontal", role = "form", autocomplete = "on", name = "Books", id = "Books" }))
{

    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
    </div>
   if (Model.Books.Any())
    {
        foreach (var item in Model.Books)
        {
            <div class="form-group">
                @Html.LabelFor(m => m.BookName, new { @class = "col-md-2 control-label" })
                <div class="col-md-5">
                    @Html.EditorFor(t => item.BookName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
                <div class="col-md-2">
                    @Html.ActionLink("Remove Book", "Remove", "Search",
     new { id = item.Id },
     new { @class = "btn btn-danger btn-sm" }
     )
                </div>
            </div>


        }

    }
    <div class="form-group">
        @Html.LabelFor(m => m.Clients, new { @class = "col-md-2 control-label" })
        <div class="col-md-5">
           
                <select name="BookName" id="BookName" class="form-control" ng-model="BookName" ng-required="true">
                    @foreach (var client in Model.Clients)
                    {
                        <option value="@client.Value">@client.Text</option>
                    }
                </select>


            @*@Html.DropDownListFor(m => m.BookName, Model.Clients, "Please Select", new { @class = "form-control" })*@

        </div>
        <div class="col-md-2">
            <input type="submit" value="Add Book" class="btn btn-success" ng-disabled="Books.$invalid" />
        </div>
    </div>


}

