@model DebtorSearch.Models.RegisterViewModel
@{
    ViewBag.Title = "Update";
}

@using (Html.BeginForm("Update", "Search", FormMethod.Post, new { @class = "form-horizontal", role = "form", autocomplete = "off" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            @Html.HiddenFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(m => m.SecurityAnswer, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(m => m.Extension, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(m => m.Id, new { htmlAttributes = new { @class = "form-control" } })
           

        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Surname, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.Surname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })


        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EmployeeNo, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">
            @Html.EditorFor(m => m.EmployeeNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Department, new { @class = "col-md-2 control-label" })
        <div class="col-md-8">

            @Html.DropDownList("Department", new SelectList(ViewBag.Times, "Value", "Text", Model.Department), new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">
        </label>
        <div class="col-md-1">
            <input type="submit" value="Update" class="btn btn-success" />
        </div>
        <div class="col-md-1">
            <input type="button" value="Back" onclick="history.go(-1)" class="btn btn-primary" />
        </div>
    </div>



}

